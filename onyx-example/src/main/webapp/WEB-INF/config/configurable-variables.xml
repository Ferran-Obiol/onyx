<?xml version="1.0" encoding="ISO-8859-1"?>
<!-- See documentation: http://wiki.obiba.org/confluence/display/ONYX/Onyx+Configuration+Guide#OnyxConfigurationGuide-ConfigurableVariables -->
<list>
  <dataSourceVariable>
    <!-- The fully defined variable to be added. -->
    <variable name="PostalCodePrefix" dataType="TEXT">
      <attributes>
        <attribute key="label" locale="en">
          <value class="string">Postal Code Prefix</value>
        </attribute>
        <attribute key="label" locale="fr">
          <value class="string">Préfixe du code postal</value>
        </attribute>
      </attributes>
    </variable>
    <!-- The parent variable path. Variables in this path will be created if needed. -->
    <parent>Onyx.Admin.Participant</parent>
    <!-- The source of data for this variable. -->
    <dataSource class="regexDataSource">
      <dataSource class="variableDataSource">
        <path>Onyx.Admin.Participant.Postal_Code</path>
      </dataSource>
      <regex>^\s*([a-zA-Z]\d[a-zA-Z]).*$</regex>
    </dataSource>
  </dataSourceVariable>
</list>