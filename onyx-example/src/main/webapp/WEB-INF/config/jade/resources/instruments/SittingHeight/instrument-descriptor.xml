<?xml version="1.0" encoding="ISO-8859-1"?>
<instrumentType>

  <name>SittingHeight</name>

  <contraindications>
    <contraIndication>
      <code>UnableToSitUnassistedCast</code>
      <type>OBSERVED</type>
    </contraIndication>

    <contraIndication>
      <code>Other_CI</code>
      <requiresDescription>true</requiresDescription>
      <type>OBSERVED</type>
    </contraIndication>
  </contraindications>

  <instrumentParameters>
    <interpretative>
      <code>IV_KYPHOSIS</code>
      <dataType>TEXT</dataType>
      <captureMethod>MANUAL</captureMethod>
      <type>OBSERVED</type>
    </interpretative>

  	<input id="sit_stool_height">
      <code>INPUT_STOOL_HEIGHT</code>
      <dataType>DECIMAL</dataType>
      <measurementUnit>cm</measurementUnit>
      <captureMethod>AUTOMATIC</captureMethod>
      <inputSource class="fixedSource">
        <value>39.5</value>
      </inputSource>
    </input>
    
    <!-- <output id="sit_stool_height">  form used if stool height must be entered
      <code>RES_STOOL_HEIGHT</code>
      <measurementUnit>cm</measurementUnit>
      <dataType>DECIMAL</dataType>
      <captureMethod>AUTOMATIQUE</captureMethod>
    </output> -->

    <output id="sit1_height1">
      <code>RES_FIRST_SITTING_HEIGHT</code>
      <measurementUnit>cm</measurementUnit>
      <dataType>DECIMAL</dataType>
      <captureMethod>MANUAL</captureMethod>
      <integrityChecks>
        <rangeCheck>
          <targetParameter reference="sit1_height1" />
          <decimalMinValueMale>70.0</decimalMinValueMale>
          <decimalMaxValueMale>207.0</decimalMaxValueMale>
          <decimalMinValueFemale>70.0</decimalMinValueFemale>
          <decimalMaxValueFemale>207.0</decimalMaxValueFemale>
        </rangeCheck>
      </integrityChecks>
    </output>

    <output id="sit1_height2">
      <code>RES_SEC_SITTING_HEIGHT</code>
      <measurementUnit>cm</measurementUnit>
      <dataType>DECIMAL</dataType>
      <captureMethod>MANUAL</captureMethod>
      <integrityChecks>
        <rangeCheck>
          <targetParameter reference="sit1_height2" />
          <decimalMinValueMale>70.0</decimalMinValueMale>
          <decimalMaxValueMale>207.0</decimalMaxValueMale>
          <decimalMinValueFemale>70.0</decimalMinValueFemale>
          <decimalMaxValueFemale>207.0</decimalMaxValueFemale>
        </rangeCheck>
        <parameterSpreadCheck>
          <targetParameter reference="sit1_height2" />
          <parameter reference="sit1_height1" />
          <offset>1</offset>
        </parameterSpreadCheck>
      </integrityChecks>
    </output>

    <computedOutput id="avg_sit_height">
      <code>CALC_AVG_SITTING_HEIGHT</code>
      <measurementUnit>cm</measurementUnit>
      <dataType>DECIMAL</dataType>
      <algorithm>AVERAGE</algorithm>
      <captureMethod>COMPUTED</captureMethod>
      <outputs>
        <output reference="sit1_height1" />
        <output reference="sit1_height2" />
      </outputs>
    </computedOutput>
    
    <computedOutput>
      <code>CALC_DIFF_SITTING_HEIGHT</code>
      <measurementUnit>cm</measurementUnit>
      <dataType>DECIMAL</dataType>
      <algorithm>DIFFERENCE</algorithm>
      <captureMethod>COMPUTED</captureMethod>
      <outputs>
        <output reference="avg_sit_height" />
        <input reference="sit_stool_height"/>
      </outputs>
    </computedOutput>
  </instrumentParameters>
</instrumentType>
