<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <import resource="classpath:META-INF/spring/jade-core/context.xml" />

  <!-- Import the remote API service declaration -->
  <import resource="classpath:/META-INF/spring/remote-api-server.xml" />

  <bean id="instrumentTypeToVariableMappingStrategy"
    class="org.obiba.onyx.jade.engine.variable.impl.DefaultInstrumentTypeToVariableMappingStrategy">
    <property name="instrumentRunService" ref="instrumentRunService" />
    <property name="instrumentService" ref="instrumentService" />
  </bean>

  <bean class="org.obiba.onyx.jade.engine.JadeModule">
    <property name="activeInterviewService" ref="activeInterviewService" />
    <property name="instrumentService" ref="instrumentService" />
    <property name="instrumentTypeToVariableMappingStrategy" ref="instrumentTypeToVariableMappingStrategy" />
    <!-- <property name="databaseSeed" ref="jadeDatabaseSeed" />-->
    <property name="stages">
      <bean class="org.obiba.onyx.engine.StageDescriptorFactoryBean">
        <property name="stageDescriptor" value="${org.obiba.onyx.config.path}/jade/stages.xml" />
      </bean>
    </property>
    <property name="actionVariableProvider" ref="onyxVariableProvider" />
  </bean>

</beans>