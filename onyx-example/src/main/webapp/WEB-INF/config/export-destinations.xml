<destinations>
  <!-- Export all variables except Participant related variables (other than its barcode) and the PDF consent form -->
  <destination>
    <name>DCC</name>
    <includeAll>true</includeAll>
    <filteredVariables>
      <string>Onyx.Consent.pdfForm</string>
      <string>Onyx.Admin.Participant</string>
    </filteredVariables>
    <includedVariables>
      <string>Onyx.Admin.Participant.barcode</string>
      <string>Onyx.Admin.Participant.PostalCodePrefix</string>
    </includedVariables>
  </destination>

  <!-- Export only consent related variables -->
  <destination> 
    <name>Appointment Unit</name>
    <exportedInterviewStatuses>
      <status>CLOSED</status>
      <status>COMPLETED</status>
    </exportedInterviewStatuses>      
    <includeAll>false</includeAll>
    <includedVariables>
      <string>Onyx.Consent</string>
      <string>Onyx.Admin.onyxVersion</string>
    </includedVariables>
    <filteredVariables>
      <string>Onyx.Consent.actions</string>
    </filteredVariables>
  </destination>
  
  <destination> 
    <name>Appointment Unit - Cancelled interviews</name>  
    <exportedInterviewStatuses>
      <status>CANCELLED</status>
    </exportedInterviewStatuses>  
    <includeAll>false</includeAll>
    <includedVariables>
      <string>Onyx.Consent</string>
      <string>Onyx.Admin.onyxVersion</string>
    </includedVariables>
    <filteredVariables>
      <string>Onyx.Consent.actions</string>
    </filteredVariables>
  </destination> 
  
</destinations>