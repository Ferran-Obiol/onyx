<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <import resource="classpath:META-INF/spring/mica-core/context.xml" />

  <bean id="micaOnyxModule" class="org.obiba.onyx.mica.engine.MicaModule">
    <property name="activeInterviewService" ref="activeInterviewService" />
    <property name="stages">
      <bean class="org.obiba.onyx.engine.StageDescriptorFactoryBean">
        <property name="stageDescriptor" value="${org.obiba.onyx.config.path}/mica/stages.xml" />
      </bean>
    </property>
    <property name="queryService" ref="persistenceManager" />
  </bean>
  
  <bean id="participantReport" class="org.obiba.onyx.print.impl.PdfTemplateReport" scope="session">
    <property name="name" value="${org.obiba.onyx.mica.report.basename}" />
    <property name="label">
      <bean class="org.springframework.context.support.DefaultMessageSourceResolvable">
        <constructor-arg value="partipantReport.label" />
      </bean>
    </property>
    <property name="reportTemplateLoader">
      <bean class="org.obiba.onyx.core.io.support.LocalizedResourceLoader">
        <property name="resourcePath" value="${org.obiba.onyx.mica.resources.path}" />
        <property name="resourceName" value="${org.obiba.onyx.mica.report.basename}" />
        <property name="resourceExtension" value=".pdf" />
      </bean> 
    </property>    
    <property name="fieldToVariableMap" value="${org.obiba.onyx.mica.report.fieldToVariable}" />   
  </bean>
    
</beans>