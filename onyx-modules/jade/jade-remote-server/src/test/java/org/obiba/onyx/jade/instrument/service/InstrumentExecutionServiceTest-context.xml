<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
  default-autowire="no">
  
  <bean id="instrumentExecutionService" class="org.obiba.onyx.jade.instrument.service.InstrumentExecutionServiceImpl">
    <property name="persistenceManager" ref="persistenceManager" />
    <property name="activeInstrumentRunService" ref="activeInstrumentRunService" />
  </bean>
  
  <bean id="activeInstrumentRunService" class="org.obiba.onyx.jade.instrument.service.MockActiveInstrumentRunServiceImpl">
    <property name="persistenceManager" ref="persistenceManager" />
  </bean>
  
  <import resource="classpath:/test-hibernate-config.xml" />
  <import resource="classpath:/test-db-config.xml" />
  

</beans>
