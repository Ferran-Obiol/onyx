<?xml version="1.0" encoding="ISO-8859-1"?>
<linked-list>
	
  <contraIndication id="stand_unassisted">
    <instrumentTypes>
    	<instrumentType reference="sta" />
    </instrumentTypes>
    <name>StandUnassisted</name>
    <description>Is Participant unable to stand unassisted ?</description>
  </contraIndication>

  <!-- Instrument types -->
  <instrumentType id="sta">
    <name>STA</name>
    <description>Height measurement</description>

    <dependentTypes>
      <instrumentType reference="bim" />
      <instrumentType reference="spi" />
    </dependentTypes>

	<contraIndications>
		<contraIndication reference="stand_unassisted" />
	</contraIndications>

  </instrumentType>

  <instrumentType id="sit">
    <name>SIT</name>
    <description>Sitting Height measurement</description>
  </instrumentType>
  
  <instrumentType id="hwc">
    <name>HWC</name>
    <description>Hips and Waist Size measurement</description>
  </instrumentType>
  
  <instrumentType id="mus">
    <name>MUS</name>
    <description>Muscle Strength measurement</description>
  </instrumentType>

  <instrumentType id="bim">
    <name>BIM</name>
    <description>Bioimpedance measurement</description>

    <dependsOnTypes>
      <instrumentType reference="sta" />
    </dependsOnTypes>

    <dependentTypes>
      <instrumentType reference="spi" />
    </dependentTypes>

  </instrumentType>

  <instrumentType id="wei">
    <name>WEI</name>
    <description>Weight measurement</description>
  </instrumentType>

  <instrumentType id="spi">
    <name>SPI</name>
    <description>Spirometry measurement</description>

    <dependsOnTypes>
      <instrumentType reference="sta" />
      <instrumentType reference="bim" />
    </dependsOnTypes>

  </instrumentType>
  
  <instrumentType id="ecg">
    <name>ECG</name>
    <description>Electrocardiogram measurement</description>
  </instrumentType>
  
  <instrumentType id="bon">
    <name>BON</name>
    <description>Bone Density measurement</description>
  </instrumentType>  

  <instrumentType id="art">
    <name>ART</name>
    <description>Arterial Stiffness measurement</description>
    
    <!--
    <dependsOnTypes>
      <instrumentType reference="blp" />
    </dependsOnTypes>
    -->
    
  </instrumentType>
  
</linked-list>