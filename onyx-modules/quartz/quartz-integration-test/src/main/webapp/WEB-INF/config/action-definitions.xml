<actionDefinitions>
  <!-- Ask the user's password for all actions of type "EXECUTE" -->
  <actionDefinition>
    <code>action.EXECUTE</code>
    <type>EXECUTE</type>
    <askPassword>false</askPassword>
    <askParticipantId>false</askParticipantId>
  </actionDefinition>

  <!-- Require a comment for all actions of type "SKIP" and "STOP" (Cancel) -->
  <actionDefinition>
    <code>action.SKIP</code>
    <type>SKIP</type>
    <askPassword>false</askPassword>
    <askParticipantId>false</askParticipantId>
    <commentMandatory>false</commentMandatory>
  </actionDefinition>
  <actionDefinition>
    <code>action.STOP</code>
    <type>STOP</type>
    <askPassword>false</askPassword>
    <askParticipantId>false</askParticipantId>
    <commentMandatory>false</commentMandatory>
  </actionDefinition>  

  <!-- Quartz -->
  <actionDefinition>
    <code>action.EXECUTE.Ready.Quartz</code>
    <type>EXECUTE</type>
    <askParticipantId>false</askParticipantId>    
    <askPassword>false</askPassword>
    <commentMandatory>false</commentMandatory>
    <reasonMandatory>false</reasonMandatory>     
  </actionDefinition>  
  <actionDefinition>
    <code>action.SKIP.Ready.Quartz</code>
    <type>SKIP</type>
    <askParticipantId>false</askParticipantId>    
    <askPassword>false</askPassword>
    <commentMandatory>false</commentMandatory>
    <reasonMandatory>false</reasonMandatory>   
  </actionDefinition>   
  <actionDefinition>
    <code>action.STOP.InProgress.Quartz</code>
    <type>STOP</type>
    <askParticipantId>false</askParticipantId>    
    <askPassword>false</askPassword>
    <commentMandatory>false</commentMandatory>
    <reasonMandatory>false</reasonMandatory>
  </actionDefinition> 
  <actionDefinition>
    <code>action.COMPLETE.InProgress.Quartz</code>
    <type>COMPLETE</type>
    <askParticipantId>false</askParticipantId>    
    <askPassword>false</askPassword>
    <commentMandatory>false</commentMandatory>
    <reasonMandatory>false</reasonMandatory>     
  </actionDefinition>    
  <actionDefinition>
    <code>action.INTERRUPT.InProgress.Quartz</code>
    <type>INTERRUPT</type>
    <askParticipantId>false</askParticipantId>    
    <askPassword>false</askPassword>
    <commentMandatory>false</commentMandatory>
    <reasonMandatory>false</reasonMandatory>     
  </actionDefinition>     
  <actionDefinition>
    <code>action.STOP.Skipped.Quartz</code>
    <type>STOP</type>
    <askParticipantId>false</askParticipantId>    
    <askPassword>false</askPassword>
    <commentMandatory>false</commentMandatory>
    <reasonMandatory>false</reasonMandatory>     
  </actionDefinition>   
  <actionDefinition>
    <code>action.STOP.Completed.Quartz</code>
    <type>STOP</type>
    <askParticipantId>false</askParticipantId>    
    <askPassword>false</askPassword>
    <commentMandatory>false</commentMandatory>
    <reasonMandatory>false</reasonMandatory> 
  </actionDefinition>   
  <actionDefinition>
    <code>action.EXECUTE.Completed.Quartz</code>
    <type>EXECUTE</type>
    <askParticipantId>false</askParticipantId>    
    <askPassword>false</askPassword>
    <commentMandatory>false</commentMandatory>
    <reasonMandatory>false</reasonMandatory>     
  </actionDefinition>  
  <actionDefinition>
    <code>action.STOP.Interrupted.Quartz</code>
    <type>STOP</type>
    <askParticipantId>false</askParticipantId>    
    <askPassword>false</askPassword>
    <commentMandatory>true</commentMandatory>
    <reasonMandatory>true</reasonMandatory>   
  </actionDefinition>  
  <actionDefinition>
    <code>action.EXECUTE.Interrupted.Quartz</code>
    <type>EXECUTE</type>
    <askParticipantId>false</askParticipantId>    
    <askPassword>false</askPassword>
    <commentMandatory>false</commentMandatory>
    <reasonMandatory>false</reasonMandatory>         
  </actionDefinition>         
  
  <!-- 
    Providing a reason and/or comment is optional when cancelling an interview.
    There are no configured reasons (i.e., no dropdown list of reasons) from which
    to choose.
  -->
  <actionDefinition>
    <code>action.STOP.Interview</code>
    <type>STOP</type>
    <askParticipantId>false</askParticipantId>     
    <askPassword>false</askPassword>
    <commentMandatory>false</commentMandatory>
    <reasonMandatory>false</reasonMandatory>   
  </actionDefinition>
</actionDefinitions>