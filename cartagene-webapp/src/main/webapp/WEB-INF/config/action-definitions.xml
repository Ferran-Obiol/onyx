<actionDefinitions>
  <!-- Ask the user's password for all actions of type "EXECUTE" -->
  <actionDefinition>
    <code>action.EXECUTE</code>
    <type>EXECUTE</type>
    <askPassword>true</askPassword>
    <askParticipantId>true</askParticipantId>
  </actionDefinition>

  <!-- Require a comment for all actions of type "SKIP" and "STOP" (Cancel) -->
  <actionDefinition>
    <code>action.SKIP</code>
    <type>SKIP</type>
    <askPassword>true</askPassword>
    <askParticipantId>true</askParticipantId>
    <commentMandatory>true</commentMandatory>
  </actionDefinition>
  <actionDefinition>
    <code>action.STOP</code>
    <type>STOP</type>
    <askPassword>true</askPassword>
    <askParticipantId>true</askParticipantId>
    <commentMandatory>true</commentMandatory>
  </actionDefinition>  

</actionDefinitions>