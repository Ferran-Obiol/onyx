<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
  <import resource="classpath:META-INF/spring/jade-core/context.xml" />

  <bean name="consentDependency" class="org.obiba.onyx.engine.StageVariableStageDependencyCondition">
    <property name="stageName" value="CON" />
    <property name="variableName" value="consent" />
  </bean>

  <bean name="staDependency" class="org.obiba.onyx.engine.StageVariableStageDependencyCondition">
    <property name="stageName" value="STA" />
    <property name="variableName" value="height" />
  </bean>

  <bean name="blpDependency" class="org.obiba.onyx.engine.StageVariableStageDependencyCondition">
    <property name="stageName" value="BLP" />
    <property name="variableName" value="Systolic_Blood_Pressure" />
  </bean>

  <bean class="org.obiba.onyx.jade.engine.JadeModule">
    <property name="activeInterviewService" ref="activeInterviewService" />
    <property name="stages">
      <list>
        <bean class="org.obiba.onyx.engine.Stage">
          <property name="name" value="STA" />
          <property name="module" value="jade" />
          <property name="stageDependencyCondition" ref="consentDependency" />
        </bean>
        <bean class="org.obiba.onyx.engine.Stage">
          <property name="name" value="SIT" />
          <property name="module" value="jade" />
          <property name="stageDependencyCondition" ref="consentDependency" />
        </bean>
        <bean class="org.obiba.onyx.engine.Stage">
          <property name="name" value="HWC" />
          <property name="module" value="jade" />
          <property name="stageDependencyCondition" ref="consentDependency" />
        </bean>
        <bean class="org.obiba.onyx.engine.Stage">
          <property name="name" value="BLP" />
          <property name="module" value="jade" />
          <property name="stageDependencyCondition" ref="consentDependency" />
        </bean>
        <bean class="org.obiba.onyx.engine.Stage">
          <property name="name" value="MUS" />
          <property name="module" value="jade" />
          <property name="stageDependencyCondition" ref="consentDependency" />
        </bean>
        <bean class="org.obiba.onyx.engine.Stage">
          <property name="name" value="BIM_TBF310" />
          <property name="module" value="jade" />
          <property name="stageDependencyCondition">
            <bean class="org.obiba.onyx.engine.MultipleStageDependencyCondition">
              <property name="operator" value="AND" />
              <property name="conditions">
                <list>
                  <ref bean="consentDependency" />
                  <ref bean="staDependency" />
                </list>
              </property>
            </bean>
          </property>
        </bean>
        <bean class="org.obiba.onyx.engine.Stage">
          <property name="name" value="WEI" />
          <property name="module" value="jade" />
          <property name="stageDependencyCondition">

            <!-- CON && !BIM -->
            <bean class="org.obiba.onyx.engine.MultipleStageDependencyCondition">
              <property name="operator" value="AND" />
              <property name="conditions">
                <list>
                  <ref bean="consentDependency" />

                  <bean class="org.obiba.onyx.engine.InverseStageDependencyCondition">
                    <property name="stageDependencyCondition">
                      <bean class="org.obiba.onyx.engine.StageVariableStageDependencyCondition">
                        <property name="stageName" value="BIM_TBF310" />
                        <property name="variableName" value="weight" />
                      </bean>
                    </property>
                  </bean>
                </list>
              </property>
            </bean>
          </property>
        </bean>

        <bean class="org.obiba.onyx.engine.Stage">
          <property name="name" value="SPI" />
          <property name="module" value="jade" />

          <property name="stageDependencyCondition">
            <!-- CON && STA && (BIM || WEI) -->
            <bean class="org.obiba.onyx.engine.MultipleStageDependencyCondition">
              <property name="operator" value="AND" />
              <property name="conditions">
                <list>
                  <ref bean="consentDependency" />
                  <ref bean="staDependency" />
                  <bean class="org.obiba.onyx.engine.MultipleStageDependencyCondition">
                    <property name="operator" value="OR" />
                    <property name="conditions">
                      <list>
                        <bean class="org.obiba.onyx.engine.StageVariableStageDependencyCondition">
                          <property name="stageName" value="BIM_TBF310" />
                          <property name="variableName" value="weight" />
                        </bean>
                        <bean class="org.obiba.onyx.engine.StageVariableStageDependencyCondition">
                          <property name="stageName" value="WEI" />
                          <property name="variableName" value="weight" />
                        </bean>
                      </list>
                    </property>
                  </bean>
                </list>
              </property>
            </bean>
          </property>
        </bean>

        <bean class="org.obiba.onyx.engine.Stage">
          <property name="name" value="ECG" />
          <property name="module" value="jade" />
          <property name="stageDependencyCondition" ref="consentDependency" />
        </bean>
        <bean class="org.obiba.onyx.engine.Stage">
          <property name="name" value="BON" />
          <property name="module" value="jade" />
          <property name="stageDependencyCondition" ref="consentDependency" />
        </bean>
        <bean class="org.obiba.onyx.engine.Stage">
          <property name="name" value="ART" />
          <property name="module" value="jade" />
          <property name="stageDependencyCondition">
            <bean class="org.obiba.onyx.engine.MultipleStageDependencyCondition">
              <property name="operator" value="AND" />
              <property name="conditions">
                <list>
                  <ref bean="consentDependency" />
                  <ref bean="blpDependency" />
                </list>
              </property>
            </bean>
          </property>
        </bean>
      </list>
    </property>
  </bean>

</beans>