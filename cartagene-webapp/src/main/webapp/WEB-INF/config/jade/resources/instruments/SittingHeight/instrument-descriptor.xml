<?xml version="1.0" encoding="ISO-8859-1"?>
<instrumentType>

  <name>SittingHeight</name>

  <instrument>
    <name>Stadiometer 1</name>
    <vendor>Seca</vendor>
    <model>Model 214</model>
    <serialNumber>1234567890</serialNumber>
    <barcode>sit01</barcode>
    <status>ACTIVE</status>
  </instrument>

  <contraindications>
    <contraIndication>
      <code>UnableToSitUnassistedCast</code>
      <type>OBSERVED</type>
    </contraIndication>

    <contraIndication>
      <code>Other</code>
      <requiresDescription>true</requiresDescription>
      <type>OBSERVED</type>
    </contraIndication>
  </contraindications>

  <instrumentParameters>
    <interpretative>
      <name>Kyphosis</name>
      <description>Kyphosis</description>
      <dataType>TEXT</dataType>
      <captureMethod>MANUAL</captureMethod>
      <type>OBSERVED</type>
    </interpretative>

    <output id="sit1_stool_height">
      <name>Stool Height</name>
      <description>Stool_Height</description>
      <measurementUnit>cm</measurementUnit>
      <dataType>DECIMAL</dataType>
      <captureMethod>MANUAL</captureMethod>
    </output>

    <output id="sit1_height1">
      <name>Sitting Height 1</name>
      <description>First_Sitting_Height_Measurement</description>
      <measurementUnit>cm</measurementUnit>
      <dataType>DECIMAL</dataType>
      <captureMethod>MANUAL</captureMethod>
      <integrityChecks>
        <rangeCheck>
          <targetParameter reference="sit1_height1" />
          <decimalMinValueMale>70.0</decimalMinValueMale>
          <decimalMaxValueMale>207.0</decimalMaxValueMale>
          <decimalMinValueFemale>70.0</decimalMinValueFemale>
          <decimalMaxValueFemale>207.0</decimalMaxValueFemale>
        </rangeCheck>
      </integrityChecks>
    </output>

    <output id="sit1_height2">
      <name>Sitting Height 2</name>
      <description>Second_Sitting_Height_Measurement</description>
      <measurementUnit>cm</measurementUnit>
      <dataType>DECIMAL</dataType>
      <captureMethod>MANUAL</captureMethod>
      <integrityChecks>
        <rangeCheck>
          <targetParameter reference="sit1_height2" />
          <decimalMinValueMale>70.0</decimalMinValueMale>
          <decimalMaxValueMale>207.0</decimalMaxValueMale>
          <decimalMinValueFemale>70.0</decimalMinValueFemale>
          <decimalMaxValueFemale>207.0</decimalMaxValueFemale>
        </rangeCheck>
        <parameterSpreadCheck>
          <targetParameter reference="sit1_height2" />
          <parameter reference="sit1_height1" />
          <offset>1</offset>
        </parameterSpreadCheck>
      </integrityChecks>
    </output>

    <computedOutput>
      <name>Sitting_Height</name>
      <description>Average_Sitting_Height_Measurement</description>
      <measurementUnit>cm</measurementUnit>
      <dataType>DECIMAL</dataType>
      <algorithm>AVERAGE</algorithm>
      <captureMethod>COMPUTED</captureMethod>
      <outputs>
        <output reference="sit1_height1" />
        <output reference="sit1_height2" />
      </outputs>
    </computedOutput>
  </instrumentParameters>
</instrumentType>