<?xml version="1.0" encoding="ISO-8859-1"?>
<linked-list>

  <!-- Stages -->
  <stage id="con">
    <name>CON</name>
    <description>Participant Consent</description>
    <module>marble</module>
    <displayOrder>1</displayOrder>
  </stage>
  
  <stage id="sta">
    <name>STA</name>
    <description>Height Measurement</description>
    <module>jade</module>
    <displayOrder>2</displayOrder>
    
    <dependsOnStages>
      <stage reference="con" />
    </dependsOnStages>
    
  </stage>
  
  <stage id="sit">
    <name>SIT</name>
    <description>Sitting Height Measurement</description>
    <module>jade</module>
    <displayOrder>3</displayOrder>
    
    <dependsOnStages>
      <stage reference="con" />
    </dependsOnStages>
    
  </stage>
  
  <stage id="hwc">
    <name>HWC</name>
    <description>Hips and Waist Size Measurement</description>
    <module>jade</module>
    <displayOrder>4</displayOrder>  
      
    <dependsOnStages>
      <stage reference="con" />
    </dependsOnStages>
    
  </stage>
  
  <stage id="mus">
    <name>MUS</name>
    <description>Grip Strength Measurement</description>
    <module>jade</module>
    <displayOrder>5</displayOrder>
        
    <dependsOnStages>
      <stage reference="con" />
    </dependsOnStages>
    
  </stage>
  
  <stage id="bim">
    <name>BIM</name>
    <description>Weight and Bioimpedance Measurement</description>
    <module>jade</module>
    <displayOrder>6</displayOrder>

    <dependsOnStages>
      <stage reference="con" />
      <stage reference="sta" />
    </dependsOnStages>
    
  </stage>
  
  <stage id="spi">
    <name>SPI</name>
    <description>Spirometry Measurement</description>
    <module>jade</module>
    <displayOrder>7</displayOrder>
    
    <dependsOnStages>
      <stage reference="con" />
      <stage reference="sta" />
      <stage reference="bim" />
    </dependsOnStages>
    
  </stage>
  
  <stage id="ecg">
    <name>ECG</name>
    <description>Electrocardiogram Measurement</description>
    <module>jade</module>
    <displayOrder>8</displayOrder>
    
    <dependsOnStages>
      <stage reference="con" />
    </dependsOnStages>
    
  </stage>
  
  <stage id="bon">
    <name>BON</name>
    <description>Bone Density Measurement</description>
    <module>jade</module>
    <displayOrder>9</displayOrder>
    
    <dependsOnStages>
      <stage reference="con" />
    </dependsOnStages>
    
  </stage>  
    
  <stage id="art">
    <name>ART</name>
    <description>Arterial Stiffness Measurement</description>
    <module>jade</module>
    <displayOrder>10</displayOrder>
    
    <dependsOnStages>
      <stage reference="con" />
    </dependsOnStages>
    
  </stage>
  
</linked-list>